<UserControl
    x:Class="TaoBD10.Views.KiemTraView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaoBD10.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource KiemTraVM}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52*" />
            <RowDefinition Height="35" />
            <RowDefinition Height="31*" />
        </Grid.RowDefinitions>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Index" />
                <DataGridTextColumn Header="Mã Hiệu" />
                <DataGridTextColumn Header="Bưu Tá" />
                <DataGridTextColumn Header="Địa chỉ" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox
            Grid.Row="1"
            Width="400"
            Height="30" />
    </Grid>
</UserControl>
