<UserControl
    x:Class="TaoBD10.Views.ChuyenThu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaoBD10.Views"
    xmlns:manager="clr-namespace:TaoBD10.Manager"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{StaticResource ChiTietVM}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="196*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <StackPanel Margin="20,0,20,0">
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="#FF649741"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="{Binding NKT_HN}" />
                <Button
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.KTHN}"
                    Content="593230"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignPaperLightButton}"
                    ToolTip="Resource name: MaterialDesignPaperSecondaryButton" />
            </StackPanel>
            <StackPanel Margin="20,0,20,0">
                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="#FF649741"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="{Binding NBCP_HN}" />
                <Button
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.BCPHN}"
                    Content="593280"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignPaperLightButton}"
                    ToolTip="Resource name: MaterialDesignPaperSecondaryButton" />
            </StackPanel>
        </StackPanel>

        <ListView
            x:Name="listView"
            Grid.Row="1"
            ItemsSource="{Binding ListShowHangHoa}">
            <Behaviors:Interaction.Triggers>
                <Behaviors:EventTrigger EventName="PreviewMouseLeftButtonUp">
                    <Behaviors:InvokeCommandAction
                        Command="{Binding SelectionCommand}"
                        CommandParameter="{Binding SelectedItem, ElementName=listView}"
                         />
                </Behaviors:EventTrigger>
            </Behaviors:Interaction.Triggers>

            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="75"
                        DisplayMemberBinding="{Binding TrangThaiBD}"
                        Header="Trạng Thái" />
                    <GridViewColumn
                        Width="35"
                        DisplayMemberBinding="{Binding TuiHangHoa.STT}"
                        Header="STT" />
                    <GridViewColumn
                        Width="40"
                        DisplayMemberBinding="{Binding TuiHangHoa.SCT}"
                        Header="SCT" />
                    <GridViewColumn Width="25" Header="Túi Số">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="DemiBold"
                                    Foreground="Blue"
                                    Text="{Binding TuiHangHoa.TuiSo}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Width="45"
                        DisplayMemberBinding="{Binding TuiHangHoa.Date}"
                        Header="Ngày CT" />
                    <GridViewColumn
                        Width="35"
                        DisplayMemberBinding="{Binding TuiHangHoa.KhoiLuong}"
                        Header="Khối Lượng" />
                    <GridViewColumn
                        Width="240"
                        DisplayMemberBinding="{Binding TuiHangHoa.SHTui}"
                        Header="SH Túi" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
