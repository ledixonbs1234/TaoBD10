<UserControl
    x:Class="TaoBD10.Views.DiNgoaiView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaoBD10.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{StaticResource DiNgoaiVM}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CellRightAlign">
            <Setter Property="Control.HorizontalAlignment" Value="Right" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="255" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <StackPanel
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    HorizontalAlignment="Center"
                    FontSize="15"
                    Foreground="DarkMagenta"
                    Text="{Binding SelectedSimple.Code}" />
            </StackPanel>
            <Expander
                Margin="5"
                HorizontalAlignment="Stretch"
                Header="Bên Gửi">
                <StackPanel Orientation="Vertical" TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                    <TextBlock
                        FontSize="15"
                        Foreground="Brown"
                        Text="{Binding SelectedSimple.BuuCucGui}" />
                    <TextBox
                        MaxWidth="400"
                        Margin="4"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding SelectedSimple.AddressSend}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Expander>

            <TextBox
                Height="100"
                MaxWidth="400"
                Margin="4"
                VerticalAlignment="Top"
                AcceptsReturn="True"
                IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                IsReadOnly="True"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding SelectedSimple.Address}"
                TextWrapping="Wrap" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    FontSize="15"
                    Foreground="Brown"
                    Text="{Binding SelectedSimple.TenBuuCuc}" />
                <TextBlock
                    Margin="5,0,9,0"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#FFB1CAFF"
                    Text="{Binding SelectedSimple.MaTinh}" />
            </StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                Text="{Binding SelectedSimple.Index}" />
            <TextBox
                Padding="auto,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Nhập mã vào đây"
                AcceptsReturn="True"
                IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding TextCode, UpdateSourceTrigger=PropertyChanged}" />
            <DataGrid
                x:Name="dataGridChuyenThu"
                Height="250"
                materialDesign:DataGridAssist.CellPadding="5 7 2 7"
                materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2"
                AutoGenerateColumns="False"
                ItemsSource="{Binding DiNgoais}"
                SelectedItem="{Binding SelectedSimple, Mode=TwoWay}"
                SelectionMode="Single">
                <Behaviors:Interaction.Triggers>
                    <Behaviors:EventTrigger EventName="MouseLeftButtonUp">
                        <Behaviors:InvokeCommandAction Command="{Binding SelectionCommand}" CommandParameter="{Binding SelectedItem, ElementName=dataGridChuyenThu}" />
                    </Behaviors:EventTrigger>
                </Behaviors:Interaction.Triggers>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Index}"
                        Header="Index"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Code}"
                        Header="Code"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding MaBuuCuc}"
                        Header="Mã Bưu Cục"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <CheckBox
                    Margin="5"
                    Content="Auto F1"
                    IsChecked="{Binding IsAutoF1}" />
                <CheckBox
                    Margin="0,0,5,0"
                    Content="Đọc số"
                    IsChecked="{Binding isSayNumber}" />
                <ToggleButton
                    Width="40"
                    Height="40"
                    Margin="5"
                    materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=ArrowCollapse,
                                                                                          Size=25}"
                    Content="{materialDesign:PackIcon Kind=ArrowExpand,
                                                      Size=25}"
                    IsChecked="{Binding IsExpanded}"
                    Style="{StaticResource MaterialDesignActionToggleButton}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <DataGrid
                Height="300"
                materialDesign:DataGridAssist.CellPadding="4 7 5 7"
                materialDesign:DataGridAssist.ColumnHeaderPadding="4 2 2 2"
                AutoGenerateColumns="False"
                ItemsSource="{Binding DiNgoais}"
                SelectedItem="{Binding SelectedDiNgoai, Mode=OneWayToSource}"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="40"
                        Binding="{Binding Index}"
                        Header="Index"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding Code}"
                        FontWeight="SemiBold"
                        Header="Code"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding MaTinh}"
                        Header="Mã Tỉnh"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        MaxWidth="300"
                        Binding="{Binding Address}"
                        Header="Địa Chỉ"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Binding="{Binding MaBuuCuc}"
                        Header="Mã Bưu Cục"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding TenBuuCuc}"
                        Header="Tên Bưu Cục"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextBlock.TextWrapping" Value="NoWrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Binding="{Binding TenTinh}"
                        Header="Tên Tỉnh"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Margin="5"
                    Command="{Binding AddAddressCommand}"
                    Content="Add Address" />
                <Button Margin="5" Content="Add Selected Address" />
                <Button Margin="5" Content="Sort" Command="{Binding SortCommand}" />
                <Button
                    Margin="5"
                    Command="{Binding XoaDiNgoaiCommand}"
                    Content="Xóa" />
                <Button
                    Margin="5"
                    Command="{Binding ClearDiNgoaiCommand}"
                    Content="Clear" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox
                    Width="300"
                    Height="85"
                    Margin="4"
                    VerticalAlignment="Top"
                    AcceptsReturn="True"
                    IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    Text="{Binding SelectedDiNgoai.Address}"
                    TextWrapping="Wrap" />
                <ComboBox
                    Width="200"
                    ItemsSource="{Binding BuuCucs}"
                    SelectedItem="{Binding SelectedBuuCuc}" />
            </StackPanel>
            <TextBox
                Height="100"
                Margin="10"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Nhập lượng lớn bưu gửi"
                AcceptsReturn="True"
                IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding TextsRange, Mode=OneWayToSource}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="120"
                    Margin="5"
                    Command="{Binding AddRangeCommand}"
                    Content="Add Range" />
                <Button
                    Width="120"
                    Margin="5"
                    Command="{Binding TestCommand}"
                    Content="TEst" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>