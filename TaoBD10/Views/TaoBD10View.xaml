<UserControl
    x:Class="TaoBD10.Views.TaoBD10View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaoBD10.Views"
    xmlns:manager="clr-namespace:TaoBD10.Manager"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{StaticResource ChiTietVM}"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="5"
            HorizontalAlignment="Center"
            Foreground="#FF6998FF"
            Style="{StaticResource MaterialDesignHeadline5TextBlock}"
            Text="{Binding NameTinhCurrent}" />
        <StackPanel
            Margin="5,20,5,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.HA_AL}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NHA_AL}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnHAAL}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.HA_AL}"
                    Content="HA - AL" />
            </materialDesign:Badged>
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.TamQuan}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NTamQuan}"
                BadgeColorZoneMode="PrimaryDark">
                <Button
                    Width="85"
                    Padding="0"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.TamQuan}"
                    Content="Tam Quan"
                    IsEnabled="{Binding IsEnTamQuan}" />
            </materialDesign:Badged>
        </StackPanel>
        <StackPanel
            Margin="5,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.KienDaNang}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NKienDaNang}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnKDN}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.KienDaNang}"
                    Content="Kiện ĐN" />
            </materialDesign:Badged>

            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.EMSDaNang}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NEMSDaNang}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnEDN}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.EMSDaNang}"
                    Content="EMS ĐN" />
            </materialDesign:Badged>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.QuangNam}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NQuangNam}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnQNam}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.QuangNam}"
                    Content="Q.Nam" />
            </materialDesign:Badged>
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.QuangNgai}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NQuangNgai}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnQNgai}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.QuangNgai}"
                    Content="Q.Ngãi" />
            </materialDesign:Badged>

        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.DiNgoaiNamTrungBo}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NKNTB}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnKNTB}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.DiNgoaiNamTrungBo}"
                    Content="Kiện NTB" />
            </materialDesign:Badged>
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.TuiNTB}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NTNTB}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnTNTB}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.TuiNTB}"
                    Content="Túi NTB" />
            </materialDesign:Badged>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.PhuMy}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NPhuMy}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnPM}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.PhuMy}"
                    Content="Phù Mỹ" />

            </materialDesign:Badged>
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.PhuCat}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NPhuCat}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnPC}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.PhuCat}"
                    Content="Phù Cát" />
            </materialDesign:Badged>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.AnNhon}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                HorizontalAlignment="Center"
                Badge="{Binding NAnNhon}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnAN}">
                <Button
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.AnNhon}"
                    Content="An Nhơn" />
            </materialDesign:Badged>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="20"
                Padding="0"
                Command="{Binding AddBDTinhCommand}"
                CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.KT1}"
                Content="{materialDesign:PackIcon Kind=Add}"
                Style="{StaticResource MaterialDesignPaperSecondaryDarkButton}"
                ToolTip="Icon" />
            <materialDesign:Badged
                Margin="0,5,10,5"
                Badge="{Binding NKT1}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnKT1}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.KT1}"
                    Content="KT1" />
            </materialDesign:Badged>
            <materialDesign:Badged
                Margin="10,5"
                Badge="{Binding NConLai}"
                BadgeColorZoneMode="PrimaryDark"
                IsEnabled="{Binding IsEnConLai}">
                <Button
                    Width="85"
                    Command="{Binding SelectedTinhCommand}"
                    CommandParameter="{x:Static manager:EnumAll+PhanLoaiTinh.None}"
                    Content="Còn Lại" />
            </materialDesign:Badged>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="100"
                Margin="0,20,10,5"
                Background="#FFFFBA89"
                Command="{Binding BD10DiCommand, Source={StaticResource ChinhVM}}"
                Content="BĐ 10 Đi" />
            <Button
                Width="100"
                Margin="0,20,10,5"
                Background="#FFFFBA89"
                Command="{Binding BD10DenCommand, Source={StaticResource ChinhVM}}"
                Content="BĐ 10 Đến" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Auto" Margin="20,0" Command="{Binding AutoGetBD10Command}"/>
            <Button
                Command="{Binding XeXaHoiCommand}"
                Content="Xe Xã Hội" />
        </StackPanel>
    </StackPanel>
</UserControl>